{{#each ideas}}
<div class="card card-body mb-2">
  <h4>{{this.title}}</h4>
  <p>{{this.details}}</p>
  <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{_id}}">Edit</a>
  <form action="/ideas/{{_id}}?_method=DELETE" method="POST">
    <input type="hidden" name="_method" value="DELETE"><input type="submit" class='btn btn-danger btn-block'
      value='Supprimer'>
  </form>
</div>
{{else}}
<p>No Video ideas listed</p>
{{/each}}


