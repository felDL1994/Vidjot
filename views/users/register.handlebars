<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img src="/img/logo.png" class="logo" alt="">
      <h3 class="text-center">
        S'enregistrer
      </h3>
      <form action="/users/register" method='post'>
        <div class="form-group">
          <label for="name">Nom</label>
          <input type="text" class="form-control" required name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" required name="email" value="{{email}}">
        </div>
        <div class="form-group">
          <label for="password">Mot de passe</label>
          <input type="password" class="form-control" required name="password" value='{{password}}'>
        </div>
        <div class="form-group">
          <label for="password">Confirmer mot de passe</label>
          <input type="password" class="form-control" required name="password2" value="{{password2}}">
        </div>
        <button type="submit" class="btn btn-primary">Soumettre</button>
      </form>
    </div>
  </div>
</div>